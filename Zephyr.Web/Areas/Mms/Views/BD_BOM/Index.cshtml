                <th field="Totalweight" sortable="true" align="left" width="80" @Html.HideColumn(Cols, "Totalweight")>总重量</th>
                <th field="PartFigureCode" sortable="true" align="left" width="80" @Html.HideColumn(Cols, "PartFigureCode")>零件图号</th>
