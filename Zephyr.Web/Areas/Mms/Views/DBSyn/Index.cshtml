@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    #btn {
        margin-top: 32px;
        height: 40px;
    }

        #btn input {
            text-decoration: none;
            background: #51a351;
            color: #f2f2f2;
            padding: 10px 30px 10px 30px;
            font-size: 16px;
            font-family: 微软雅黑,宋体,Arial,Helvetica,Verdana,sans-serif;
            font-weight: bold;
            border-radius: 3px;
            -webkit-transition: all linear 0.30s;
            -moz-transition: all linear 0.30s;
            transition: all linear 0.30s;
        }

            #btn input:hover {
                background: #385f9e;
            }
</style>

<div id="btn">
    <input type="button" value="部门同步" onclick="OnSyn(1)" />
    <input type="button" value="员工同步" onclick="OnSyn(2)" />
    @*<input type="button" value="组织架构同步" onclick="OnSyn(3)" />*@
</div>

<script src="~/Content/js/core/common.js"></script>
<script type="text/javascript">
    function OnSyn(type) {
        com.ajax({
            type: 'GET',
            url: '/api/Mms/DBSyn/GetDBSyn?type=' + type,
            success: function (result) {
                com.message(result.Result ? 'success' : 'warning', result.Msg);
            }
        });
    }
</script>


