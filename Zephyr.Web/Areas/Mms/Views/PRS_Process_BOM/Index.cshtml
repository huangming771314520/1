                                    { field: 'Spec',title: '规格',width: 160 }
                                        ]],
                            onSelect: function (rowIndex, rowData) {
                                     $('#New_PartName').textbox('setValue', rowData['InventoryName']);
                                     $('#New_Model').textbox('setValue', rowData['Model']);
