                             queryParams : {
                                    tableName:'[SYS_Part]',
                                    searchField:'[InventoryCode],[InventoryName],[Model],[Spec]',
                                    firstFightField:'[InventoryName]',
                                       whereSql:'IsEnable=1 and InventoryCode like \''+'01%'+'\'',
                                        orderBy:'InventoryName,Model',
                                    connName:'Mms'
                                        //CacheKey:'SYS_Part',
                                        //CacheTime:'480',
                                        //connName:'Mms'
                                    },
                                    method: 'GET',
                                    panelWidth:680,
                                    delay: 1000,
                                    mode: 'remote',
                                    value: '',
                                    idField: 'InventoryCode',
