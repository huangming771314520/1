
@{
    ViewBag.Title = "SYS_Equipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Cols = new Zephyr.Models.sys_roleMenuColumnMapService().GetCurrentUserMenuColumns();
}

@section scripts{
    <script src="/Content/js/viewModel/com.viewModel.search.js"></script>
    <script type="text/javascript">
        var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
        var viewModel = function(){ 
            com.viewModel.search.apply(this,arguments);
        }
        ko.bindingViewModel(new viewModel(data));
    </script>
}

    @Html.RenderToolbar()

    <div class="container_12" style="position:relative;">
        <div class="grid_1 lbl">设备名称</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.EquipmentName" class="z-txt " /></div>
        <div class="grid_1 lbl">所属车间</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.AffiliatedWorkshopID" class="z-txt " /></div>
        <div class="grid_1 lbl">设备状态</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.EquipmentState" class="z-txt " /></div>

        <div class="clear"></div>
        <div class="grid_1 lbl">&nbsp;</div>
        <div class="grid_2 val">&nbsp;</div>
        <div class="clear"></div>

        <div class="prefix_9" style="position:absolute;top:5px;height:0;">  
            <a id="a_search" href="#" class="buttonHuge button-blue" data-bind="click:searchClick" style="margin:0 15px;">查询</a> 
            <a id="a_reset"  href="#" class="buttonHuge button-blue" data-bind="click:clearClick">清空</a>
        </div>
    </div>
 
    <table data-bind="datagrid:grid">
            <thead>  
            <tr>  
                <th field="ID"    sortable="true" align="left"   hidden width="80"     @Html.HideColumn(Cols,"ID") ></th>
                <th field="EquipmentCode"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"EquipmentCode") >设备编码</th>
                <th field="EquipmentName"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"EquipmentName") >设备名称</th>
                <th field="EquipmentType" sortable="true" align="left" width="80" data-options="formatter:function(value,row){return com.formatCombobox('EquipmentType',value);}" @Html.HideColumn(Cols, "EquipmentType")>设备类型</th>
                <th field="AffiliatedWorkshopID"    sortable="true" align="left"  hidden  width="80"     @Html.HideColumn(Cols,"AffiliatedWorkshopID") ></th>
                <th field="AffiliatedWorkshopName" sortable="true" align="left" width="80" @Html.HideColumn(Cols, "AffiliatedWorkshopName")>所属车间</th>
                <th field="EquipmentParms"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"EquipmentParms") >设备参数</th>
                <th field="EquipmentState" sortable="true" align="left" width="80" data-options="formatter:function(value,row){return com.formatCombobox('EquipmentState',value);}" @Html.HideColumn(Cols, "EquipmentState")>设备状态</th>
                <th field="IsEnable" sortable="true" align="left" width="80" @Html.HideColumn(Cols, "IsEnable") data-options="formatter:function(value,row){ return (value == 1 ) ? '是':'否';}">是否可用</th>
                <th field="CreatePerson"    sortable="true" align="left"  hidden  width="80"     @Html.HideColumn(Cols,"CreatePerson") >创建人</th>
                <th field="CreateTime"    sortable="true" align="left"  hidden  width="80"     @Html.HideColumn(Cols,"CreateTime") >创建时间</th>
                <th field="ModifyPerson"    sortable="true" align="left" hidden   width="80"     @Html.HideColumn(Cols,"ModifyPerson") >更新人</th>
                <th field="ModifyTime"    sortable="true" align="left"   hidden width="80"     @Html.HideColumn(Cols,"ModifyTime") >更新时间</th>
                <th field="ProcessType"    sortable="true" align="left"  hidden  width="80"     @Html.HideColumn(Cols,"ProcessType") ></th>
            </tr>                            
        </thead>      
    </table>
 
